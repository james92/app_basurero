<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="control-group">
    <%= f.label "Nombre" %>
    <%= f.text_field :first_name, class: "input-xlarge" %>
  </div>
  <div class="control-group">
    <%= f.label "Apellido" %>
    <%= f.text_field :last_name, class: "input-xlarge" %>
  </div>
  <div class="control-group">
    <%= f.label "Genero" %>
    <%= f.radio_button :gender, true, checked: true %>Hombre
    <%= f.radio_button :gender, false %>Mujer
  </div>
  <div class="control-group">
    <%= f.label "Pais" %>
    <%= f.select :country_id, Country.all.map { |country| [country.name, country.id] } %>
  </div>
  <div class="control-group">
    <%= f.label "Cargo" %>
    <%= f.select :job_id, Job.all.map { |job| [job.name, job.id] } %>
  </div>
  <div class="control-group">
    <%= f.label "Tipo de documento" %>
    <%= f.text_field :document_type, class: "input-xlarge" %>
  </div>
  <div class="control-group">
    <%= f.label "Documento" %>
    <%= f.text_field :document, class: "input-xlarge" %>
  </div>
  <div class="control-group">
    <%= f.label "NIT" %>
    <%= f.text_field :nit, class: "input-xlarge" %>
  </div>
  <div class="control-group">
    <%= f.label "Correo" %>
    <%= f.text_field :email, class: "input-xlarge" %>
  </div>
  <div class="control-group">
    <%= f.label "Direccion" %>
    <%= f.text_area :address, class: "input-xxlarge", rows: "5" %>
  </div>
  <div class="control-group">
    <%= f.label "Estado", class: "checkbox" do %>
    <%= f.check_box :state %> Empleado activo
    <% end %>
  </div>

  <%= f.fields_for :user do |builder| %>
    <div class="row">
      <div class="span1"></div>
      <div class="span10">
        <div class="control-group">
          <%= builder.label :username %>
          <%= builder.text_field :username %>
        </div>
        <div class="control-group">
          <%= builder.label :password %>
          <%= builder.password_field :password %>
        </div>
        <div class="control-group">
          <%= builder.label "Rol" %>
          <%= builder.select :role_id, Role.all.map { |role| [role.name, role.id] } %>
        </div>
        <div class="control-group">
          <%= builder.label "Estado", class: "checkbox" do %>
          <%= builder.check_box :state %> Cuenta de usuario activa
          <% end %>
        </div>
      </div>
      <div class="span1"></div>
    </div>
    
  <% end %>

  <div class="control-group">
    <%= f.button "Guardar", type: "submit", class: "btn btn-primary" %>
  </div>
<% end %>
